root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

; Golang
[*.go]
indent_style = tab
indent_size = 4

; YAML
[*.{yaml,yml}]
indent_size = 2

; HTML
[*.{html,css,js}]
indent_size = 2

; Markdown
[*.md]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
